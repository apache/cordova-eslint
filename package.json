{
  "name": "@cordova/eslint-config",
  "version": "6.0.0-dev",
  "description": "Cordova ESLint Config",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run test:coverage",
    "test:e2e": "jasmine spec/e2e.spec.js",
    "test:coverage": "c8 npm run test:e2e",
    "lint": "eslint ."
  },
  "repository": "github:apache/cordova-eslint",
  "bugs": "https://github.com/apache/cordova-eslint/issues",
  "keywords": [
    "cordova",
    "eslint"
  ],
  "author": "Apache Software Foundation",
  "license": "Apache-2.0",
  "dependencies": {
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "jasmine": "^5.8.0"
  },
  "c8": {
    "all": true,
    "exclude": [
      "spec/",
      "coverage/",
      "eslint.config.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
